pipeline
{    agent any
     stages
     {
         stage('ContDownload')
         {
             steps
             {
               git 'repository url'
             }
         }
         stage('ContBuild')
         {
            steps
            {
                 sh 'mvn package'
             }
          }
          stage('ContDeployment')
          {
             steps
             {
                sh 'scp sourece loation and destanation loccation'
              }
           }
           stage('ContTesting')
           {
              steps
              {
                 git 'testing repository url'
                 sh 'java -jar testing.jar'
              }
           }
           post
           {
             success
             {
                input message: 'wating for  approval from DM', Submitter: 'koneti'
               sh 'scp /var/lib/jenkins/workspace/Declartive_Pipeline/webapp/target/webapp.war  username@9.0.8.7:/var/lib/tomcat/webapps/prodenv.war'
             }
             failure
             {
               mail bcc: '', body: '', cc: '', from: '', replyTo: '', subject: 'build failed', To: 'koneti21@gmail.com'
             }
           }
      }
  }
                
          
            
                 
           
